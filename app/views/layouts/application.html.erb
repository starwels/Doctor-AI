<!DOCTYPE html>
<html>
  <head>
    <title>DoctorAi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container d-flex flex-column vh-100 bg-light">
<!--      <p class="notice"><%#= notice %></p>-->
<!--      <p class="alert"><%#= alert %></p>-->

      <div class="d-flex justify-content-between my-1">
        <div>
          <h1>Doctor A.I.</h1>
        </div>
        <div class="d-flex flex-row">
          <% if !current_page?(chats_path) %>
            <div class="me-2">
              <%= link_to 'Voltar', chats_path, class: 'btn btn-primary', style: 'width: 100px'  %>
            </div>
          <% end %>

          <% if user_signed_in? %>
            <div>
              <%= form_tag(destroy_user_session_path, method: :delete) do %>
                <%= submit_tag 'Sair', class: 'btn btn-primary', style: 'width: 100px' %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
