<!DOCTYPE html>
<html>
  <head>
    <title>DoctorAi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar bg-body-tertiary fixed-top shadow-sm" style="height: 50px">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">Doctor A.I.</span>

        <ul class="nav justify-content-end">
          <li class="nav-item me-2">
            <%= yield :navigation %>
          </li>
          <% if current_user&.admin? %>
            <li class="nav-item me-2">
              <%= link_to 'PainÃ©l Admin', admin_root_path, class: 'btn btn-primary fs-6' %>
            </li>
          <% end %>
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= form_tag(destroy_user_session_path, method: :delete) do %>
                <%= submit_tag 'Sair', class: 'btn btn-primary', style: 'width: 100px' %>
              <% end %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container-fluid d-flex flex-column vh-100 bg-light" style="padding-top: 50px;">
      <%= yield %>
    </div>
  </body>
</html>
