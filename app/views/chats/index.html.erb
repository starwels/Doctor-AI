<div class="row">
  <div class="col-8">
    <h4>Conversas</h4>
    <div class="border border-top border-success mb-2"></div>
    <div class="d-grid gap-2">
      <%= render @chats %>
    </div>
  </div>
  <div class="col-4">
    <h4>Criar nova conversa</h4>
    <div class="border border-top border-success mb-2"></div>
    <div class="d-grid gap-2">
      <% Assistant.all.each do |assistant| %>
        <%= form_tag chats_path(assistant: assistant.name), method: :post, style: 'display: inherit' do %>
          <%= submit_tag assistant.name, class: 'btn btn-success text-start' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
